<% provide(:title, 'Currency') %>
<li class="span12">
	<section>
		<h2>Currency</h2>
		<div class="row-fluid custom-note">
			<div class="span12">
				<div id="erlangga" class="note"><%= image_tag("currency/Erlangga_3.png") %></div>
				<div id="greg" class="note"><%= image_tag("currency/Greg_3.png") %></div>
				<div id="johannes" class="note"><%= image_tag("currency/Johannes_3.png") %></div>
				<div id="jr" class="note"><%= image_tag("currency/Jr_3.png") %></div>
				<div id="mewan" class="note"><%= image_tag("currency/Mewan_3.png") %></div>
				<div id="ruoran" class="note"><%= image_tag("currency/Ruoran_3.png") %></div>
				<div id="solon" class="note"><%= image_tag("currency/Solon_3.png") %></div>
				<div id="ste" class="note"><%= image_tag("currency/Ste_3.png") %></div>
			</div>
		</div>
		<div class="row-fluid custom-row">
			<div class="span12">
				<input id="amount" placeholder="Insert here the value you want"/>
			</div>
		</div>
		<div id="exchange-container" class="row-fluid custom-row">
			<div class="span6">
				<table id="otherToRupees"></table>
			</div>
			<div class="span6">
				<table id="rupeesToOther"></table>
			</div>
		</div>
		<div class="clear"></div>
		<div id="timestamp"></div>
	</section>
</li>